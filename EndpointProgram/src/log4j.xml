<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d{HH:mm:ss,SSS} [%t] (%F) - %m%n"/>
		</layout>
	</appender>
	<appender name="orgserver" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="debug.log" />
		<param name="append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %d [%t] (%F:%L) - %m%n"/>
		</layout>
	</appender>
	<logger name="org.Server">
		<level value="error" />
		<appender-ref ref="orgserver" />
	</logger>
	<root>
		<priority value="debug"/>
		<appender-ref ref="stdout"/>

	</root>
</log4j:configuration>